<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Tabcolors</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Tabcolors</item>
    </style>

    <style name="ActionBarTabStyle.Tabcolors" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tabcolors</item>
    </style>

    <style name="ActionBar.Solid.Tabcolors" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_tabcolors</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_tabcolors</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_tabcolors</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Tabcolors</item>
    </style>

</resources>